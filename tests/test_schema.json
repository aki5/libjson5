{
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
                "id": { "type": "integer" },
                "name": { "type": "string" },
                "price": { "type": "number" },
                "location": { "$ref": "#/definitions/location" },
                "counts": { "$ref": "#/definitions/intarray" }
        },
        "required": [ "id", "name", "price"],
        "definitions": {
                "location": {
                        "type": "object",
                        "properties": {
                                "latitude": { "type": "number" },
                                "longitude": { "type": "number" }
                        }
                },
                "intarray": {
                        "type": "array",
                        "items": { "type": "integer" }
                }
        }
}
